<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_image_background"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/background_header"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wifiCurrentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="WIFI"
        android:onClick="startWiFiActivity"
        android:background="@drawable/button_main"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/batteryButton"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/line_vertical"
        app:layout_constraintEnd_toStartOf="@+id/batteryButton"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/batteryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="BATTERY"
        android:background="@drawable/button_main"
        android:textColor="#FFFFFF"
        android:onClick="startBatteryActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:background="@drawable/line_vertical"
        app:layout_constraintStart_toEndOf="@+id/batteryButton"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="INFO"
        android:onClick="startInfoActivity"
        android:background="@drawable/button_main"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/batteryButton"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>